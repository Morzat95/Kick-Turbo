{
	"manifest_version": 3,
	"name": "Kick Turbo",
	"version": "1.0.0",
	"description": "Potencia tu experiencia en Kick.com: Estabilizador de reproducci√≥n, herramientas de comunidad y mejoras de interfaz.",
	"permissions": ["storage"],
	"host_permissions": ["https://kick.com/*", "https://ceneka.net/*"],
	"content_scripts": [
		{
			"matches": ["https://kick.com/*"],
			"js": ["src/fix-player.js", "src/ui-injector.js"],
			"css": ["styles/inject.css"],
			"run_at": "document_end"
		}
	],
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
}
